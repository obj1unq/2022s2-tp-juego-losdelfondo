import wollok.game.*
import pepita.*

program juego {
	
	//init nivel
	game.title("Juego Base")
	game.cellSize(20)
	game.height(30)
	game.width(30)
	game.addVisualCharacter(pepita)
	
	
	//movimiento
	keyboard.w.onPressDo(pepita.moverse(arriba))
	keyboard.a.onPressDo(pepita.moverse(izquierda))
	keyboard.s.onPressDo(pepita.moverse(abajo))
	keyboard.d.onPressDo(pepita.moverse(derecha))
	
	
	//start
	game.start()
}